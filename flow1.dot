digraph {
rankdir="LR";
node [fixedsize=true, width=1.3, height=0.5];

subgraph {
sortv=1;

imA [label="Image A", shape=box];
imB [label="Image B", shape=box];

coadd [label="Coadd", shape=box];

imA -> coadd [label="xxxxx", texlbl="$w$"];
imB -> coadd [label="xxxxx", texlbl="$1 - w$"];

det [label="Detection map", shape=box, color="red", style="line width=3pt"];

coadd -> det [label="xxxxx", texlbl="Convolve"];
}

}
